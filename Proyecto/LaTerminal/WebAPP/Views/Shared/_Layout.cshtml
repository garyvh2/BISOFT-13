@using WebAPP.Helpers;
@using Entities.Entities;
@using Entities.Classes;

<!DOCTYPE html>
<html>
<head>
    @* >> Meta Tags *@
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="viewport" content='viewport-fit=cover, width=device-width, height=device-height, initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=no'>

    @* >> Font Importings *@
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,900" rel="stylesheet">

    @* >> JavaScript Importings *@
    @Scripts.Render("~/bundles/libs")
    @Scripts.Render("~/bundles/LTL")
    @Scripts.Render("~/bundles/APIs")

    <script>
        @{
            Usuario user = (Usuario)HttpContext.Current.Session["current_user"];
            var authorized = user == null ? false : true;
        }
        var asp_user = @Json.Encode(authorized);

        if (ltl.Session() != null && asp_user) {
            ltl.go(["Home"]);
        }
    </script>

    @* >> CSS Importings *@
    @Styles.Render("~/Content/css")

    @* >> Other *@
    <title>La Terminal</title>
</head>
<body id="site-body">
    @RenderBody()


</body>
</html>
